<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 彩色日志 -->
    <!-- 彩色日志依赖的渲染类 -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter" />
    <conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter" />
    <conversionRule conversionWord="wEx" converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter" />

    <!-- 控制台输出日志 -->
    <ContextListener class="com.taikang.health.hicm.support.logback.ext.AddLogVar"/> <!--添加ClientIP属性 可以直接使用-->
    <!--目录-->
    <property name="LOG_HOME" value="./logs"/>
    <!--应用名及端口-->
    <springProperty scope="context" name="APPLICATION_NAME"  source="spring.application.name"/>
    <springProperty scope="context" name="PORT"  source="server.port"/>
    <!-- 彩色日志格式 -->
    <property name="CONSOLE_LOG_PATTERN" value="${CONSOLE_LOG_PATTERN:-%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%21thread]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}" />
    <!--文件日志格式-->
    <property name="ENCODER_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} ${LOG_LEVEL_PATTERN:-%5p} ${PID:- } --- [%21thread] %-40.40logger{39} : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>

    <!--文件路径及名称-->
    <property name="FILE_NAME_PATTERN" value="${LOG_HOME}/${APPLICATION_NAME}/${APPLICATION_NAME}_${ClientIP}_${PORT}_%d{yyyyMMdd}"/>
    <property name="MAX_FILE_SIZE" value="20MB"/><!--文件最大为20MB ，自动切割-->
    <property name="MAX_HISTORY" value="270"/><!--日志最大保存时间(天数)-->

    <!-- 控制台输出日志 -->
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    <!-- 日志输出 到文件-->
    <appender name="File" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${FILE_NAME_PATTERN}_log_%i.log.zip</fileNamePattern>
            <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
            <maxHistory>${MAX_HISTORY}</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${ENCODER_PATTERN}</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework" level="ERROR"/>
    <logger name="org.springframework.cache" level="DEBUG"/>
    <logger name="org.apache.tomcat" level="ERROR"/>
    <logger name="org.apache.http" level="ERROR"/>
    <logger name="org.apache.commons.beanutils" level="ERROR"/>
    <logger name="com.taikang.xboot" level="DEBUG"/>
    <logger name="com.taikang.health" level="DEBUG"/>

    <root level="DEBUG">
        <appender-ref ref="Console"/>
        <appender-ref ref="File"/>
    </root>
</configuration>